@model StudentWeb.Models.elementary_Book

    @{

        Layout = "~/Views/Shared/lesson_LayoutCopy.cshtml";
    }
    <link href="~/Content/css/templatemo-style.css" rel="stylesheet" />

    <style>
        .img-card > img {
            height: 600px;
            width: 540px;
        }
        <!-- -->
        .view {
            width: 1000px;
            margin: 0px auto;
        }

        .head {
            padding: 30px 0px;
            color: #ffffff;
            background-color: #004444;
        }

        .title {
            font-weight: bold;
            font-size: 175%;
            display: inline-block;
        }

        .contact {
            float: right;
            display: inline-block;
        }

        .social {
            margin: 0px 5px;
        }


        .main {
            padding: 30px 0px;
            background-color: #eeeeee;
        }

        .block {
            width: 280px;
            height: 280px;
            padding: 10px;
            margin: 10px;
            display: inline-block;
            line-height: 40px;
            background-color: #eeffff;
            box-shadow: 0px 0px 5px #888888;
            vertical-align: top;
            text-align: left;
        }

        .block-head {
            font-weight: bold;
            font-size: 120%;
        }

        .block-main {
            margin-top: 10px;
        }

        .tit {
            text-align: center;
            color: white;
            letter-spacing: 2.5px;
            font-size: 28px;
            font-weight: 400;
            padding: 30px;
        }




        @@media (max-width: 992px) {
            .head-line {
                font-size: 14px;
            }

            .con {
                top: 428px;
            }

            .img-card {
                margin: 0 auto;
                padding: 20px;
                margin-bottom: 20px;
            }


            .tit {
                text-align: center;
                color: white;
                letter-spacing: 2.5px;
                font-size: 24px;
                font-weight: 400;
                padding: 5px;
                padding-top: 30px;
                padding-bottom: 25px;
            }

            .titTop {
                text-align: left;
                color: white;
                letter-spacing: 2.5px;
                font-size: 55px;
                font-weight: 400;
                font-family: 華康竹風體W4;
                padding: 5px;
                padding-bottom: 100px;
                margin-top: 150px;
                text-align: left;
                right: 30px;
            }
            <!-- -->
            .contact {
                display: block;
                float: none;
                margin-top: 10px;
            }

            .social {
                width: 36px;
                height: 36px;
            }

            .view {
                width: 100%;
            }

            .main {
                text-align: center;
            }
        }
    </style>

    <div style="padding-bottom:20px;border-bottom:2px solid gray;padding-top:10px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12" style="text-align:center">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <img src="@Url.Action("GetImageelementaryBook","Book", new { fileName= Model.Image })" class="img-responsive  imgst">
                    </div>
                    <div class="fh5co-card-body col-lg-6 col-md-6 col-sm-6" style="float:left;padding-top:10px;text-align:left">
                        <h1>@Model.title</h1>
                        <p>
                            @Model.Description
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="clear()"></div>








    <script>
        $(function () {
            $(".tit").text("兒童美語");
        })
        function ContactSend() {

            if ($("#name").val().trim() == "") {
                alert("請填寫姓名");
                return false;
            }

            if ($("#email").val().trim() != "") {
                var emailRule = /^\w+((-\w+)|(\.\w+))*\@@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z]+$/g;
                if (emailRule.test($("#email").val()) == false) {
                    alert("信箱格式有誤,請檢查");
                    return false;
                }
            }

            if ($("#Phone").val().trim() == "") {
                if ($("#LocalPhone").val().trim() == "") {
                    alert("電話或手機請選擇一樣填寫");
                    return false;
                }
            }

            if ($("#Phone").val().trim() != "") {
                var Phone = $("#Phone").val().trim();
                Phone = Phone.replace(/\s+/g, "").length;
                if (Phone != "10") {
                    alert("手機請填寫10碼,請檢查");
                    return false;
                }
            }

            if ($("#LocalPhone").val().trim() != "") {
                var LocalPhone = $("#LocalPhone").val().trim();
                LocalPhone = LocalPhone.replace(/\s+/g, "").length;
                if (LocalPhone < "8") {
                    alert("電話至少8碼,請檢查");
                    return false;
                }
            }

            $.ajax({
                url: "/Liu/InsertContact",
                type: "POST",
                data: $("#ContactForm").serialize(),
                success: function (data) {
                    if (data.Status == "0") {
                        alert("\n訊息：送出成功，我們會盡快聯繫您！");

                    } else {
                        var message = data.StatusDesc;
                        alert(message);
                    }
                },
                error: function (err) {
                    alert(err.Status);
                }
            });
        }
    </script>
