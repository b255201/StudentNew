@using PagedList;
@using PagedList.Mvc;
@model IPagedList<StudentWeb.Models.StudentImpression>
@{
    Layout = "~/Views/Shared/lesson_LayoutCopy.cshtml";
}
<link href="~/Content/css/templatemo-style.css?20180901" rel="stylesheet" />


<style>
    article {
        padding: 10px;
        margin-bottom: 10px;
        margin-top: 10px;
    }

    figure img {
        width: 100%;
        height: 100%;
    }

    .glyphicon-folder-open,
    .glyphicon-user,
    .glyphicon-calendar,
    .glyphicon-eye-open,
    .glyphicon-comment {
        padding: 5px;
    }
</style>
<section style="background:whitesmoke;" id="venue" class="wow fadeInUp">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                @foreach (var i in Model)
                {
                    <article>
                        <div class="row">
                            <div class="col-sm-6 col-md-4">
                                <figure>
                                    <img src="@Url.Action("GetImageImpression","Impression", new { fileName= i.Image })" >
                                </figure>
                            </div>
                            <div class="col-sm-6 col-md-8">
                                <h4 style="color:blue">@i.Title</h4>
                                <p>
                                    @Html.Raw(i.Description)
                                </p>
                                <section>
                                    <i class="glyphicon glyphicon-calendar"></i>@i.Date
                                    @*<a href="#" class="btn btn-default btn-sm pull-right">More ... </a>*@
                                </section>
                            </div>
                        </div>
                    </article>
                    <hr />
                }
            </div>
        </div>
    </div>
</section>
<div class="clear"></div>
